  "cards": [
    {
      "id": "intro-0",
      "sectionId": "intro",
      "title": "简介",
      "kind": "text",
      "body": "Pandoc 是一个文档转换器，这个 [pandoc](https://pandoc.org/) 备忘单包含 pandoc 命令和一些常见的 pandoc 技巧"
    },
    {
      "id": "s1-1",
      "sectionId": "s1",
      "title": "语法",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc -s [source file] -o [output file]"
    },
    {
      "id": "s1-2",
      "sectionId": "s1",
      "title": "",
      "kind": "text",
      "body": "• [Pandoc 官方文档](https://pandoc.org/)"
    },
    {
      "id": "s1-3",
      "sectionId": "s1",
      "title": "安装",
      "kind": "text",
      "body": "安装命令 | 环境\n:-|-\n`$ brew install pandoc`   | macos\n`$ choco install pandoc`    | windows"
    },
    {
      "id": "s1-4",
      "sectionId": "s1",
      "title": "Debian/Ubuntu",
      "kind": "code",
      "lang": "bash",
      "code": "$ sudo apt-get update\n$ sudo apt-get install pandoc"
    },
    {
      "id": "s1-5",
      "sectionId": "s1",
      "title": "Fedora",
      "kind": "code",
      "lang": "bash",
      "code": "$ sudo dnf install pandoc"
    },
    {
      "id": "s1-6",
      "sectionId": "s1",
      "title": "Arch Linux",
      "kind": "code",
      "lang": "bash",
      "code": "$ sudo pacman -S pandoc"
    },
    {
      "id": "s1-7",
      "sectionId": "s1",
      "title": "将 LaTeX 转换为 MS Word",
      "kind": "text",
      "body": "简单的 `.tex` 到 `.docx`"
    },
    {
      "id": "s1-8",
      "sectionId": "s1",
      "title": "",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc -s file.tex -o file.docx"
    },
    {
      "id": "s1-9",
      "sectionId": "s1",
      "title": "",
      "kind": "text",
      "body": "将 `.tex` 转换为 `.docx` 并使用默认引文"
    },
    {
      "id": "s1-10",
      "sectionId": "s1",
      "title": "",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc -s file.tex --citeproc --bibliography=bib_library.bib -o file.docx"
    },
    {
      "id": "s1-11",
      "sectionId": "s1",
      "title": "",
      "kind": "text",
      "body": "将 `.tex` 文件转换为 `.docx` 文件，并注明具体引文"
    },
    {
      "id": "s1-12",
      "sectionId": "s1",
      "title": "",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc -s file.tex --citeproc --bibliography=bib_library.bib --csl=apa.csl -o file.docx"
    },
    {
      "id": "s1-13",
      "sectionId": "s1",
      "title": "",
      "kind": "text",
      "body": "`.tex` 到 `.docx`，带交叉引用"
    },
    {
      "id": "s1-14",
      "sectionId": "s1",
      "title": "",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc -s file.tex --filter pandoc-crossref -o file.docx"
    },
    {
      "id": "s2-15",
      "sectionId": "s2",
      "title": "转换文件格式",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md -o output.pdf"
    },
    {
      "id": "s2-16",
      "sectionId": "s2",
      "title": "支持的输入格式",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc -s input.txt -o output.html"
    },
    {
      "id": "s2-17",
      "sectionId": "s2",
      "title": "自定义输出格式",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md --to=latex -o output.tex"
    },
    {
      "id": "s2-18",
      "sectionId": "s2",
      "title": "%E6%B7%BB%E5%8A%A0%E5%85%83%E6%95%B0%E6%8D%AE",
      "kind": "code",
      "lang": "bash",
      "code": "%24%20pandoc%20input.md%20-o%20output.pdf%20--metadata%20title%3D%22My%20Document%22",
      "encoded": true
    },
    {
      "id": "s2-19",
      "sectionId": "s2",
      "title": "从 URL 转换",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc https://example.com/document.md -o output.pdf"
    },
    {
      "id": "s2-20",
      "sectionId": "s2",
      "title": "生成幻灯片",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md -t beamer -o output.pdf"
    },
    {
      "id": "s2-21",
      "sectionId": "s2",
      "title": "合并文件",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc file1.md file2.md -o output.pdf"
    },
    {
      "id": "s2-22",
      "sectionId": "s2",
      "title": "指定样式文件",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md -o output.pdf --css=style.css"
    },
    {
      "id": "s2-23",
      "sectionId": "s2",
      "title": "转换为 AsciiDoc",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md -o output.asciidoc"
    },
    {
      "id": "s2-24",
      "sectionId": "s2",
      "title": "转换为 Docx 格式",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md -o output.docx"
    },
    {
      "id": "s2-25",
      "sectionId": "s2",
      "title": "执行 Lua 过滤器",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md --lua-filter=custom-filter.lua -o output.pdf"
    },
    {
      "id": "s2-26",
      "sectionId": "s2",
      "title": "自动生成目录",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md -o output.pdf --toc"
    },
    {
      "id": "s2-27",
      "sectionId": "s2",
      "title": "禁用目录编号",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md -o output.pdf --toc --toc-depth=2"
    },
    {
      "id": "s2-28",
      "sectionId": "s2",
      "title": "显示详细信息",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc input.md -o output.pdf -v"
    },
    {
      "id": "s2-29",
      "sectionId": "s2",
      "title": "查看支持的输出格式",
      "kind": "code",
      "lang": "bash",
      "code": "$ pandoc --list-output-formats"
    }
  ],
