      "code": "$var = 0\n[int] $var = 'Trevor'         # (抛出异常)\n[string] $var = 'Trevor'      # (不会抛出异常)\n$var.GetType()\n\n# 多重赋值\n$a,$b,$c = 'a','b','c'\n\n# 创建数组\n$arrayvar = @('va1','va2')\n\n# 创建字典\n$dict = @{k1 = 'test'; k2 = 'best'}"
