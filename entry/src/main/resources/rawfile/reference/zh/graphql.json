      "title": "指令(Directives)",
      "kind": "code",
      "lang": "graphql",
      "code": "query Hero($episode: Episode, $withFriends: Boolean!) {\n  hero(episode: $episode) {\n    name\n    friends @include(if: $withFriends) {\n      name\n    }\n  }\n}"
