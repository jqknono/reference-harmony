      "id": "intro-50",
      "sectionId": "intro",
      "title": "变量(Variables)",
      "kind": "code",
      "lang": "graphql",
      "code": "# { \"graphiql\": true, \"variables\": { \"episode\": JEDI } }\nquery HeroNameAndFriends($episode: Episode) {\n  hero(episode: $episode) {\n    name\n    friends {\n      name\n    }\n  }\n}"
