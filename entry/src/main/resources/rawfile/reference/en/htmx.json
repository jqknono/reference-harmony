  "cards": [
    {
      "id": "intro-0",
      "sectionId": "intro",
      "title": "Intro",
      "kind": "text",
      "body": "A modern, minimal JavaScript library that allows you to create dynamic web interfaces using HTML attributes."
    },
    {
      "id": "s1-1",
      "sectionId": "s1",
      "title": "CDN Import",
      "kind": "code",
      "lang": "html",
      "code": "<script src=\"https://unpkg.com/htmx.org@1.9.2\"></script>"
    },
    {
      "id": "s1-2",
      "sectionId": "s1",
      "title": "Basic Usage",
      "kind": "code",
      "lang": "html",
      "code": "<button hx-get=\"/hello\" hx-target=\"#result\">Say Hi</button>\n<div id=\"result\"></div>"
    },
    {
      "id": "s1-3",
      "sectionId": "s1",
      "title": "Server Response",
      "kind": "code",
      "lang": "html",
      "code": "<!-- /hello response -->\n<p>Hello from server</p>"
    },
    {
      "id": "s2-4",
      "sectionId": "s2",
      "title": "`hx-get`, `hx-post`, etc.",
      "kind": "code",
      "lang": "html",
      "code": "<a hx-get=\"/page\">Load Page</a>\n<form hx-post=\"/submit\"></form>"
    },
    {
      "id": "s2-5",
      "sectionId": "s2",
      "title": "`hx-target`",
      "kind": "code",
      "lang": "html",
      "code": "<button hx-get=\"/data\" hx-target=\"#box\"></button>\n<div id=\"box\"></div>"
    },
    {
      "id": "s2-6",
      "sectionId": "s2",
      "title": "`hx-trigger`",
      "kind": "code",
      "lang": "html",
      "code": "<input\n  hx-get=\"/search\"\n  hx-trigger=\"keyup changed delay:300ms\"\n  hx-target=\"#results\"\n/>"
    },
    {
      "id": "s3-7",
      "sectionId": "s3",
      "title": "`hx-swap`",
      "kind": "code",
      "lang": "html",
      "code": "<div hx-get=\"/frag\" hx-swap=\"innerHTML\"></div>"
    },
    {
      "id": "s3-8",
      "sectionId": "s3",
      "title": "`hx-swap`",
      "kind": "text",
      "body": "• `outerHTML`\n• `innerHTML`\n• `beforebegin`, `afterbegin`, etc."
    },
    {
      "id": "s3-9",
      "sectionId": "s3",
      "title": "`hx-swap-oob`",
      "kind": "code",
      "lang": "html",
      "code": "<div hx-swap-oob=\"true\" id=\"msg\"></div>"
    },
    {
      "id": "s3-10",
      "sectionId": "s3",
      "title": "`hx-swap-oob`",
      "kind": "text",
      "body": "_Useful for global updates from partials._"
    },
    {
      "id": "s3-11",
      "sectionId": "s3",
      "title": "Swap Modifiers",
      "kind": "code",
      "lang": "html",
      "code": "hx-swap=\"outerHTML transition:true swap:1s\""
    },
    {
      "id": "s4-12",
      "sectionId": "s4",
      "title": "Auto POST on Submit",
      "kind": "code",
      "lang": "html",
      "code": "<form hx-post=\"/submit\" hx-target=\"#status\">\n  <input name=\"name\" />\n  <button type=\"submit\">Send</button>\n</form>\n<div id=\"status\"></div>"
    },
    {
      "id": "s4-13",
      "sectionId": "s4",
      "title": "`hx-include`",
      "kind": "code",
      "lang": "html",
      "code": "<input id=\"user-id\" name=\"id\" />\n<button hx-post=\"/update\" hx-include=\"#user-id\">Update</button>"
    },
    {
      "id": "s4-14",
      "sectionId": "s4",
      "title": "`hx-vals`",
      "kind": "code",
      "lang": "html",
      "code": "<button hx-post=\"/save\" hx-vals='{\"id\": 42, \"active\": true}'>Save</button>"
    },
    {
      "id": "s5-15",
      "sectionId": "s5",
      "title": "Loading Indicator",
      "kind": "code",
      "lang": "html",
      "code": "<button hx-get=\"/load\" hx-indicator=\"#spinner\">Load</button>\n<div id=\"spinner\" class=\"htmx-indicator\">Loading...</div>"
    },
    {
      "id": "s5-16",
      "sectionId": "s5",
      "title": "`hx-push-url`",
      "kind": "code",
      "lang": "html",
      "code": "<a hx-get=\"/page\" hx-push-url=\"true\">Go</a>"
    },
    {
      "id": "s5-17",
      "sectionId": "s5",
      "title": "Polling",
      "kind": "code",
      "lang": "html",
      "code": "<div hx-get=\"/time\" hx-trigger=\"every 5s\"></div>"
    },
    {
      "id": "s6-18",
      "sectionId": "s6",
      "title": "Listen to Events",
      "kind": "code",
      "lang": "js",
      "code": "document.body.addEventListener('htmx:afterSwap', (e) => {\n  console.log('Swap complete');\n});"
    },
    {
      "id": "s6-19",
      "sectionId": "s6",
      "title": "Event Hooks",
      "kind": "text",
      "body": "• `htmx:beforeRequest`\n• `htmx:afterSwap`\n• `htmx:responseError`"
    },
    {
      "id": "s6-20",
      "sectionId": "s6",
      "title": "Extensions",
      "kind": "code",
      "lang": "html",
      "code": "<script src=\"https://unpkg.com/htmx.org/dist/ext/json-enc.js\"></script>\n<form hx-post=\"/api\" hx-ext=\"json-enc\"></form>"
    },
    {
      "id": "s7-21",
      "sectionId": "s7",
      "title": "Python Backend (Flask)",
      "kind": "code",
      "lang": "python",
      "code": "@app.route(\"/hello\")\ndef hello():\n    return \"<p>Hello, HTMX!</p>\""
    },
    {
      "id": "s7-22",
      "sectionId": "s7",
      "title": "HTML Client",
      "kind": "code",
      "lang": "html",
      "code": "<button hx-get=\"/hello\" hx-target=\"#msg\">Click</button>\n<div id=\"msg\"></div>"
    }
