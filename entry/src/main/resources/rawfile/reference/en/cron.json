    {
      "id": "s1-32",
      "sectionId": "s1",
      "title": "Crontab command",
      "kind": "qa",
      "front": "`crontab -e`",
      "back": "Edit or create a crontab file if doesn’t already exist."
    },
    {
      "id": "s1-33",
      "sectionId": "s1",
      "title": "Crontab command",
      "kind": "qa",
      "front": "`crontab -l`",
      "back": "Display the crontab file."
    },
    {
      "id": "s1-34",
      "sectionId": "s1",
      "title": "Crontab command",
      "kind": "qa",
      "front": "`crontab -r`",
      "back": "Remove the crontab file."
    },
    {
      "id": "s1-35",
      "sectionId": "s1",
      "title": "Crontab command",
      "kind": "qa",
      "front": "`crontab -v`",
      "back": "Display the last time you edited your crontab file.<br>_(non-standard)_"
    },
    {
      "id": "s1-36",
      "sectionId": "s1",
      "title": "Special characters",
      "kind": "qa",
      "front": "`Asterik(*)`",
      "back": "Matches all values in the field or any possible value."
    },
    {
      "id": "s1-37",
      "sectionId": "s1",
      "title": "Special characters",
      "kind": "qa",
      "front": "`Hyphen(-)`",
      "back": "Used to define a range.Ex: 1-5 in 5th field(Day Of Week) Every Weekday i.e., Monday to Friday"
    },
    {
      "id": "s1-38",
      "sectionId": "s1",
      "title": "Special characters",
      "kind": "qa",
      "front": "`Slash (/)`",
      "back": "1st field(Minute) /15 meaning every fifteen minute or increment of range."
    },
    {
      "id": "s1-39",
      "sectionId": "s1",
      "title": "Special characters",
      "kind": "qa",
      "front": "`Comma (,)`",
      "back": "Used to separate items.Ex: 2,6,8 in 2nd fields(Hour) executes at 2am,6am and 8am"
    },
    {
      "id": "s1-40",
      "sectionId": "s1",
      "title": "Special characters",
      "kind": "qa",
      "front": "`L`",
      "back": "It is allowed only for Day of Month or Day Of Week field, 2L in Day of week indicates Last tuesday of every month"
    },
    {
      "id": "s1-41",
      "sectionId": "s1",
      "title": "Special characters",
      "kind": "qa",
      "front": "`Hash (#)`",
      "back": "It is allowed only for Day Of Week field, which must be followed within range of 1 to 5. For example, 4#1 means \"The first Thursday\" of given month."
    },
    {
      "id": "s1-42",
      "sectionId": "s1",
      "title": "Special characters",
      "kind": "qa",
      "front": "`Question mark (?)`",
      "back": "Can be instead of '\\*' and allowed for Day of Month and Day Of Week. Usage is restricted to either Day of Month or Day Of Week in a cron expression."
    },
