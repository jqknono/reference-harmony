  "cards": [
    {
      "id": "intro-0",
      "sectionId": "intro",
      "title": "Intro",
      "kind": "text",
      "body": "[Cron](https://en.wikipedia.org/wiki/Cron) is most suitable for scheduling repetitive tasks. Scheduling one-time tasks can be accomplished using the associated at utility."
    },
    {
      "id": "s1-1",
      "sectionId": "s1",
      "title": "Format",
      "kind": "code",
      "lang": "",
      "code": "Min  Hour Day  Mon  Weekday"
    },
    {
      "id": "s1-2",
      "sectionId": "s1",
      "title": "Format",
      "kind": "text",
      "body": "---"
    },
    {
      "id": "s1-3",
      "sectionId": "s1",
      "title": "Format",
      "kind": "code",
      "lang": "",
      "code": "*    *    *    *    *  command to be executed"
    },
    {
      "id": "s1-4",
      "sectionId": "s1",
      "title": "Format",
      "kind": "code",
      "lang": "",
      "code": "┬    ┬    ┬    ┬    ┬\n│    │    │    │    └─  Day of Week   (0=Sun .. 6=Sat)\n│    │    │    └──────  Month         (1..12)\n│    │    └───────────  Day of Month  (1..31)\n│    └────────────────  Hour          (0..23)\n└─────────────────────  Minute        (0..59)"
    },
    {
      "id": "s1-5",
      "sectionId": "s1",
      "title": "Format",
      "kind": "text",
      "body": "---"
    },
    {
      "id": "s1-6",
      "sectionId": "s1",
      "title": "Format",
      "kind": "qa",
      "front": "Minute",
      "back": "0 - 59 | , - \\* /"
    },
    {
      "id": "s1-7",
      "sectionId": "s1",
      "title": "Format",
      "kind": "qa",
      "front": "Hour",
      "back": "0 - 23 | , - \\* /"
    },
    {
      "id": "s1-8",
      "sectionId": "s1",
      "title": "Format",
      "kind": "qa",
      "front": "Day of Month",
      "back": "1 - 31 | , - \\* ? / L W"
    },
    {
      "id": "s1-9",
      "sectionId": "s1",
      "title": "Format",
      "kind": "qa",
      "front": "Month",
      "back": "1 - 12 | , - \\* /"
    },
    {
      "id": "s1-10",
      "sectionId": "s1",
      "title": "Format",
      "kind": "qa",
      "front": "Day of Week",
      "back": "0 - 6 | , - \\* ? / L #"
    },
    {
      "id": "s1-11",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`*/15 * * * *`",
      "back": "Every 15 mins"
    },
    {
      "id": "s1-12",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`0 * * * *`",
      "back": "Every hour"
    },
    {
      "id": "s1-13",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`0 */2 * * *`",
      "back": "Every 2 hours"
    },
    {
      "id": "s1-14",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`15 2 * * *`",
      "back": "At 2:15AM (of every day)"
    },
    {
      "id": "s1-15",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`15 2 * * ?`",
      "back": "At 2:15AM (of every day)"
    },
    {
      "id": "s1-16",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`10 9 * * 5`",
      "back": "At 9:10AM (of every Friday)"
    },
    {
      "id": "s1-17",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`0 0 * * 0`",
      "back": "At 12:00 AM, only on Sunday"
    },
    {
      "id": "s1-18",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`15 2 * * 1L`",
      "back": "At 2:15am on the last monday of every month"
    },
    {
      "id": "s1-19",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`15 0 * * 4#2`",
      "back": "At 00:15am on the second thursday of every month"
    },
    {
      "id": "s1-20",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`0 0 1 * *`",
      "back": "At 12:00 AM, on day 1 of the month (1st of month / monthly)"
    },
    {
      "id": "s1-21",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`0 0 1 1 *`",
      "back": "At 12:00 AM, on day 1 of the month, only in January (1st of month)"
    },
    {
      "id": "s1-22",
      "sectionId": "s1",
      "title": "Examples",
      "kind": "qa",
      "front": "`@reboot`",
      "back": "Every reboot <br>_(non-standard)_"
    },
