    {
      "id": "s1-29",
      "sectionId": "s1",
      "title": "Special strings",
      "kind": "qa",
      "front": "@daily",
      "back": "Run once each day, \"0 0 \\* \\* \\*\" _(non-standard)_"
    },
    {
